<!DOCTYPE html>
<html>
  <head>
    <%- include('../header') %>
  </head>
  <body>
    <div class="container mb-3">

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb p-1 pl-2 pr-2">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/board">Board</a></li>
          <li class="breadcrumb-item"><a href="/board/<%= content[0].board_id %>"><%= content[0].title %></a></li>
          <li class="breadcrumb-item active" aria-current="page">Edit Post</li>
        </ol>
      </nav>

      <form action="/edit/<%= content[0].board_id %>" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" value="<%= content[0].name %>" class="form-control">
          <label for="std_no">Student No</label>
          <input type="text" id="std_no" name="std_no" value="<%= content[0].std_no %>" class="form-control">
        </div>
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" value="<%= content[0].title %>" class="form-control">
        </div>
        <div class="form-group">
          <label for="content">content</label>
            <textarea id="body" name="content" rows="5" class="form-control" value=""><%= content[0].content %></textarea>
        </div>

        <div>
          <a class="btn btn-primary" href="/board/<%= content[0].board_id %>">Back</a>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>

      </form>

    </div>
  </body>
</html>